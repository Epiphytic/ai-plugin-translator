{
  "name": "@epiphytic/ai-plugin-translator",
  "version": "1.0.4",
  "description": "Deterministic CLI to translate AI coding agent plugins between ecosystems",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-plugin-translator": "dist/cli.js",
    "pluginx": "dist/pluginx.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:regression": "npx tsx test/regression/run.ts",
    "test:regression:superpowers": "npx tsx test/regression/superpowers-marketplace.test.ts",
    "test:smoke": "npx tsx test/smoke/gemini-link.test.ts",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "gemini",
    "plugin",
    "translator",
    "extension"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/epiphytic/ai-plugin-translator.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^14.0.3",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
